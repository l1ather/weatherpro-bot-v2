
# ===========================================
# WeatherPro Bot v2.0 Configuration
# ===========================================

# -------------------------------------------
# Telegram Bot
# -------------------------------------------
# Получите токен у @BotFather в Telegram
BOT_TOKEN=8556899503:AAEWoWHTkej541XYfKoBht_8W9OteYbfYDc

# -------------------------------------------
# OpenWeather API
# -------------------------------------------
# Зарегистрируйтесь на https://openweathermap.org/
# Получите API ключ на https://home.openweathermap.org/api_keys
OPENWEATHER_API_KEY=1e52e57b0958d30e9978ff36c4cb3652
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5

# -------------------------------------------
# Redis Configuration
# -------------------------------------------
# Если используете Docker, оставьте 'redis'
# Для локальной разработки используйте 'localhost'
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# -------------------------------------------
# Cache Settings (in seconds)
# -------------------------------------------
# Время жизни кеша для текущей погоды
CACHE_TTL=3600

# Время жизни кеша для прогноза на 5 дней
FORECAST_CACHE_TTL=7200

# -------------------------------------------
# API Settings
# -------------------------------------------
# Таймаут для запросов к OpenWeather API (секунды)
API_TIMEOUT=10

# Максимальное количество повторных попыток при ошибке
MAX_RETRIES=3

# -------------------------------------------
# Database Configuration
# -------------------------------------------
# SQLite (по умолчанию, простая настройка)
DATABASE_URL=sqlite:///weather_bot.db

# PostgreSQL (раскомментируйте если используете PostgreSQL)
# DATABASE_URL=postgresql://weather_user:your_password@postgres:5432/weather_bot

# Пароль для PostgreSQL (если используете)
# POSTGRES_PASSWORD=your_secure_password_here

# -------------------------------------------
# Application Settings
# -------------------------------------------
# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Максимальное количество избранных городов на пользователя
MAX_FAVORITE_CITIES=10

# -------------------------------------------
# Admin Settings
# -------------------------------------------
# ID администраторов (через запятую), имеют доступ к /stats
# Узнать свой ID можно у @userinfobot
ADMIN_IDS=[1233376136]

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
# Минимальное время между запросами от одного пользователя (секунды)
RATE_LIMIT=1.0

# Максимальное количество запросов в временном окне
MAX_REQUESTS_PER_WINDOW=10

# Размер временного окна для rate limiting (секунды)
RATE_LIMIT_WINDOW=60

# -------------------------------------------
# Feature Flags
# -------------------------------------------
# Включить/выключить функции (true/false)
ENABLE_FAVORITES=true
ENABLE_STATISTICS=true
ENABLE_NOTIFICATIONS=false

# -------------------------------------------
# Monitoring & Logging
# -------------------------------------------
# Путь к файлу логов
LOG_FILE=logs/bot.log

# Максимальный размер файла лога перед ротацией (MB)
LOG_MAX_SIZE=10

# Количество файлов логов для хранения
LOG_BACKUP_COUNT=5

# -------------------------------------------
# Performance
# -------------------------------------------
# Размер пула соединений для БД
DB_POOL_SIZE=5

# Таймаут для операций с БД (секунды)
DB_TIMEOUT=30

# -------------------------------------------
# Development Settings
# -------------------------------------------
# Режим разработки (включает debug логи)
DEBUG=false

# Тестовый режим (использует мок API вместо реального)
TEST_MODE=false

# -------------------------------------------
# Localization
# -------------------------------------------
# Язык по умолчанию
DEFAULT_LANGUAGE=["ru"]

# Поддерживаемые языки (через запятую)
SUPPORTED_LANGUAGES=["ru", "en"]

# -------------------------------------------
# Notifications (если включены)
# -------------------------------------------
# Время отправки ежедневных уведомлений (HH:MM)
NOTIFICATION_TIME=08:00

# Часовой пояс для уведомлений
NOTIFICATION_TIMEZONE=Europe/Moscow

# -------------------------------------------
# External Services
# -------------------------------------------
# Sentry DSN для мониторинга ошибок (опционально)
# SENTRY_DSN=https://your-sentry-dsn

# Prometheus metrics endpoint (опционально)
# METRICS_ENABLED=false
# METRICS_PORT=9090

# -------------------------------------------
# Security
# -------------------------------------------
# Секретный ключ для шифрования (генерируйте уникальный!)
# SECRET_KEY=your-secret-key-here

# Разрешенные домены для webhook (если используете)
# ALLOWED_DOMAINS=yourdomain.com

# -------------------------------------------
# Notes
# -------------------------------------------
# 1. Не коммитьте этот файл с реальными значениями в Git!
# 2. Скопируйте как .env и заполните реальными данными
# 3. Для production используйте сильные пароли
# 4. Регулярно обновляйте ключи безопасности
# 5. Храните .env в безопасном месте